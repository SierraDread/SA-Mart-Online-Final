@page
@model Version2SAMart.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>
<p>Welcome to the Admin Dashboard!</p>

<h3>Manage Users</h3>
<form method="post" asp-page-handler="CreateUser">
    <label>Username:</label>
    <input type="text" name="Username" required />
    <label>Password:</label>
    <input type="password" name="Password" required />
    <label>Email:</label>
    <input type="email" name="Email" required />
    <button type="submit">Create User</button>
</form>

<form method="post" asp-page-handler="EditUser">
    <label>User ID:</label>
    <input type="text" name="Id" required />
    <label>New Username:</label>
    <input type="text" name="Username" />
    <label>New Password:</label>
    <input type="password" name="Password" />
    <label>New Email:</label>
    <input type="email" name="Email" />
    <button type="submit">Edit User</button>
</form>

<form method="post" asp-page-handler="DeleteUser">
    <label>User ID:</label>
    <input type="text" name="Id" required />
    <button type="submit">Delete User</button>
</form>

<h3>Manage Products</h3>
<form method="post" asp-page-handler="CreateProduct">
    <label>Name:</label>
    <input type="text" name="Name" required />
    <label>Description:</label>
    <input type="text" name="Description" required />
    <label>Price:</label>
    <input type="number" step="0.01" name="Price" required />
    <label>Stock:</label>
    <input type="number" name="Stock" required />
    <label>Image URL:</label>
    <input type="text" name="ImageUrl" required />
    <button type="submit">Create Product</button>
</form>

<form method="post" asp-page-handler="EditProduct">
    <label>Product ID:</label>
    <input type="text" name="Id" required />
    <label>New Name:</label>
    <input type="text" name="Name" />
    <label>New Description:</label>
    <input type="text" name="Description" />
    <label>New Price:</label>
    <input type="number" step="0.01" name="Price" />
    <label>New Stock:</label>
    <input type="number" name="Stock" />
    <label>New Image URL:</label>
    <input type="text" name="ImageUrl" />
    <button type="submit">Edit Product</button>
</form>

<form method="post" asp-page-handler="DeleteProduct">
    <label>Product ID:</label>
    <input type="text" name="Id" required />
    <button type="submit">Delete Product</button>
</form>

<h3>Manage Orders</h3>
<form method="post" asp-page-handler="CreateOrder">
    <label>User ID:</label>
    <input type="text" name="UserId" required />
    <label>Order Date:</label>
    <input type="date" name="OrderDate" required />
    <label>Total Amount:</label>
    <input type="number" step="0.01" name="TotalAmount" required />
    <button type="submit">Create Order</button>
</form>

<form method="post" asp-page-handler="DeleteOrder">
    <label>Order ID:</label>
    <input type="text" name="Id" required />
    <button type="submit">Delete Order</button>
</form>

<h3>Manage Order Items</h3>
<form method="post" asp-page-handler="CreateOrderItem">
    <label>Product ID:</label>
    <input type="text" name="ProductId" required />
    <label>Order ID:</label>
    <input type="text" name="OrderId" required />
    <label>Quantity:</label>
    <input type="number" name="Quantity" required />
    <label>Price:</label>
    <input type="number" step="0.01" name="Price" required />
    <button type="submit">Create Order Item</button>
</form>

<form method="post" asp-page-handler="DeleteOrderItem">
    <label>Order Item ID:</label>
    <input type="text" name="Id" required />
    <button type="submit">Delete Order Item</button>
</form>